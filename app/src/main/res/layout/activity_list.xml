<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_groceries"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rodneytressler.todolist.actualList"
    android:background="@color/darkGreen">

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
    </SearchView>

    <TextView
        android:id="@+id/groceries_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:gravity="center"
        android:text="Tasks"
        android:textSize="35dp"/>

    <Button
        android:id="@+id/groceries_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/Green"
        android:textColor="#111111"/>

    <ListView
        android:id="@+id/actual_list_full_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groceries_list_title"
        android:layout_above="@id/groceries_button_add">

    </ListView>




</RelativeLayout>
