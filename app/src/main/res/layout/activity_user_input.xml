<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rodneytressler.todolist.userInput"
    android:background="@color/darkGreen">
    <EditText
        android:id="@+id/user_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textSize="30dp"
        android:maxLength="18"
        android:gravity="center"/>

    <EditText
        android:id="@+id/user_input_date_month"
        android:inputType="number"
        android:maxLength="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="MM"
        android:layout_below="@id/user_input_title"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/user_input_date_day"
        android:inputType="number"
        android:maxLength="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="dd"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/user_input_title"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/user_input_date_time"
        android:inputType="time"
        android:maxLength="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="12:00"
        android:layout_below="@id/user_input_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/user_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To Do Instructions"
        android:gravity="center"
        android:maxLength="100"
        android:layout_below="@id/user_input_date_day"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/category_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:maxLength="18"
        android:layout_below="@id/user_input_title"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/user_input_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/Green"
        android:textColor="#111111"/>

    <Button
        android:id="@+id/user_input_button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/Green"
        android:text="Add Image"
        android:textColor="#111111"/>

    <ImageView
        android:id="@+id/image_input"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/user_input_text"
        android:layout_centerInParent="true"/>

</RelativeLayout>
